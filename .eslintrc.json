{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },

    "overrides": [],
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },

    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-unused-vars": [
            "error",
            { "args": "after-used", "argsIgnorePattern": "^_" }
        ]
    },
    "ignorePatterns": ["node_modules/"]
}
